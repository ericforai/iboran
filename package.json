{
  "name": "iboran",
  "version": "1.0.0",
  "description": "Website template for Payload",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "postbuild": "next-sitemap",
    "prestart": "node scripts/ensure-next-build.mjs",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test --config=playwright.config.ts",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "pseo:config": "tsx scripts/pseo-config-generator.ts",
    "pseo:keywords": "tsx scripts/pseo-keywords-generator.ts",
    "pseo:schema": "tsx scripts/pseo-schema-generator.ts",
    "pseo:render": "tsx scripts/pseo-page-renderer.ts",
    "pseo:review": "tsx scripts/pseo-review.ts",
    "pseo:import": "tsx scripts/pseo-import-to-blog.ts",
    "pseo:publish": "tsx scripts/pseo-auto-publish.ts",
    "pseo:batch": "tsx scripts/pseo-batch-generate.ts",
    "architecture:check": "depcruise --config dependency-cruiser.config.cjs src",
    "architecture:check:html": "depcruise --config dependency-cruiser.config.cjs src --output-type err-html > architecture-report.html",
    "architecture:check:archi": "depcruise --config dependency-cruiser.config.cjs src --output-type archi > architecture-graph.html",
    "architecture:visualize": "depcruise --config dependency-cruiser.config.cjs src --output-type dot | dot -T svg > architecture-graph.svg",
    "validate": "npm run architecture:check && npm run lint",
    "db:backup": "bash scripts/backup-local-db.sh --verify",
    "db:restore": "bash scripts/restore-local-db.sh",
    "db:list-backups": "bash scripts/backup-local-db.sh --list",
    "db:safe-reset": "bash scripts/safe-docker-reset.sh"
  },
  "dependencies": {
    "@google/genai": "^1.39.0",
    "@payloadcms/admin-bar": "3.68.5",
    "@payloadcms/db-mongodb": "3.68.5",
    "@payloadcms/email-nodemailer": "3.68.5",
    "@payloadcms/live-preview-react": "3.68.5",
    "@payloadcms/next": "3.68.5",
    "@payloadcms/plugin-form-builder": "3.68.5",
    "@payloadcms/plugin-nested-docs": "3.68.5",
    "@payloadcms/plugin-redirects": "3.68.5",
    "@payloadcms/plugin-search": "3.68.5",
    "@payloadcms/plugin-seo": "3.68.5",
    "@payloadcms/richtext-lexical": "3.68.5",
    "@payloadcms/ui": "3.68.5",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^10.1.0",
    "dotenv": "16.4.7",
    "framer-motion": "^11.18.2",
    "geist": "^1.3.0",
    "graphql": "^16.9.0",
    "lucide-react": "^0.468.0",
    "next": "15.4.10",
    "next-sitemap": "^4.2.3",
    "payload": "3.68.5",
    "prism-react-renderer": "^2.3.1",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hook-form": "7.70.0",
    "react-markdown": "^10.1.0",
    "sharp": "0.34.5",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@playwright/test": "1.56.1",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "16.3.0",
    "@types/escape-html": "^1.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "25.0.5",
    "@types/react": "19.2.1",
    "@types/react-dom": "19.2.1",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "^10.4.19",
    "copyfiles": "^2.4.1",
    "dependency-cruiser": "^17.3.5",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.7",
    "js-yaml": "^4.1.1",
    "jsdom": "26.1.0",
    "playwright": "1.56.1",
    "playwright-core": "1.56.1",
    "postcss": "^8.4.38",
    "prettier": "^3.4.2",
    "react-scan": "^0.4.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.21.0",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ],
    "overrides": {
      "nodemailer@<=7.0.10": ">=7.0.11",
      "nodemailer@<7.0.11": ">=7.0.11",
      "preact@>=10.28.0 <10.28.2": ">=10.28.2"
    }
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
